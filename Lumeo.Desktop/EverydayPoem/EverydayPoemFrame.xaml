<UserControl
    x:Class="Lumeo.Desktop.EverydayPoem.EverydayPoemFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lumeo.Desktop.EverydayPoem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ws="https://schemas.elecho.dev/wpfsuite"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Foreground="White"
    FontFamily="FangSong, KaiTi"
    Foreground="{DynamicResource ForeColor}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="ws:TextBox">
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource ForeColor}" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Resources>
    <ws:StackPanel Margin="12,24" Spacing="24">
        <Border
            Height="28"
            Padding="12,0"
            HorizontalAlignment="Center"
            Background="{DynamicResource MaskColor}"
            CornerRadius="14">
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="Segoe UI"
                FontSize="12">
                <Run x:Name="DateTb" Text="2025 11 2" />
                <Run Text="·" />
                <Run Text="每日一首" />
            </TextBlock>
        </Border>
        <ws:TextBox x:Name="TitleTb" FontSize="32">少年游</ws:TextBox>
        <ws:TextBox x:Name="AuthorTb" FontSize="24">宋 · 柳永</ws:TextBox>
        <ws:TextBox
            x:Name="ContentTb"
            xml:space="preserve"
            FontSize="24"
            TextWrapping="Wrap">长安古道马迟迟，高柳乱蝉嘶。夕阳岛外，秋风原上，目断四天垂。
归云一去无踪迹，何处是前期？狎兴生疏，酒徒萧索，不似少年时。</ws:TextBox>
    </ws:StackPanel>
</UserControl>
